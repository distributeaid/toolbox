<%= form_for @conn, @action, fn f -> %>
  <div class="form-item is-inline">
    <%= label f, :email, class: "is-req" %>
    <%= text_input f, :email %>
  </div>

  <div class="form-item is-inline">
    <%= label f, :password, class: "is-req" %>
    <%= password_input f, :password %>
  </div>

  <div class="form-item is-inline">
    <%= submit "Submit", class: "button" %>
  </div>
<% end %>
