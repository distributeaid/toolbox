<%= if has_projects? @projects do %>
  <table class="is-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>

        <th></th>
      </tr>
    </thead>
    <tbody>
  <%= for project <- @projects do %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>

        <td>
          <span><%= link "Show", to: Routes.group_project_path(@conn, :show, project.group_id, project), class: "button is-small" %></span>
          <span><%= link "Edit", to: Routes.group_project_path(@conn, :edit, project.group_id, project), class: "button is-small" %></span>
          <span><%= link "Delete", to: Routes.group_project_path(@conn, :delete, project.group_id, project), method: :delete, data: [confirm: "Are you sure?"], class: "button is-small is-secondary" %></span>
        </td>
      </tr>
  <% end %>
    </tbody>
  </table>

<% else %>
  <p>
    No projects have been created.
  </p>
<% end %>
